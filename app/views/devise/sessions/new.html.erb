<div class="bg-gray-100 flex min-h-screen items-center justify-center">
  <div class="bg-white rounded-lg shadow-lg flex w-full max-w-4xl overflow-hidden">

    <div class="hidden md:block md:w-1/2">
      <img class="h-full w-full object-cover" src="<%= asset_path('logo.jpeg') %>" alt="Company Logo">
    </div>

    <div class="w-full p-8 md:w-1/2">
      <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="text-3xl font-extrabold text-gray-900">
          Bienvenido de Nuevo
        </h2>
        <p class="mt-2 text-sm text-gray-600">
          Inicia sesión para continuar
        </p>
      </div>

      <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

          <div>
            <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full"  %>
            </div>
          </div>

          <div>
            <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.password_field :password, autocomplete: "current-password", class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full"  %>
            </div>
          </div>

          <div>
            <%= f.submit "Iniciar Sesión", class: "flex w-full justify-center rounded-md border border-transparent bg-[#005480] py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-[#004370] focus:outline-none focus:ring-2 focus:ring-[#004370] focus:ring-offset-2 cursor-pointer" %>
          </div>
        <% end %>

        <p class="mt-6 text-center text-sm text-gray-600">
          ¿No tienes una cuenta?
          <%= link_to "Regístrate ahora", new_registration_path(resource_name), class: "font-medium text-indigo-600 hover:text-indigo-500" %>
        </p>
      </div>
    </div>
  </div>
</div>