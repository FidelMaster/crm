
<%# Contenedor principal para centrar la tarjeta y dar un fondo a la página %>
<div class="w-full max-w-2xl mx-auto">
  
  <%# La tarjeta que envuelve todo el formulario %>
  <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">

    <%# Título dinámico dentro de la tarjeta %>
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b border-gray-200 pb-4">
      <%= location.new_record? ? "Nueva Ubicación" : "Editar Ubicación" %>
    </h2>

    <%= form_with(model: location, class: "space-y-6") do |form| %>
      <% if location.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
          <p class="font-bold">Se encontraron <%= pluralize(location.errors.count, "error") %></p>
          <ul class="mt-2 list-disc list-inside">
            <% location.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <!-- Dropdown para Grupo de Ubicación -->
      <div class="my-5">
        <%= form.label :location_group_id, "Grupo de Ubicación", class: "block text-sm font-medium text-gray-700" %>
        <%= form.collection_select :location_group_id, @location_groups, :id, :description, { prompt: "Selecciona un grupo" }, { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"} %>
      </div>
      <!-- Campo de Descripción -->
      <div class="my-5">
        <%= form.label :description, "Descripción de la Ubicación", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :description, class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-1 focus:ring-inset focus:ring-gray-600 sm:text-sm sm:leading-6" %>
      </div>



      <!-- Botones de Acción -->
      <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-200">
        <%= link_to "Cancelar", locations_path, class: "rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <%= form.submit "Guardar Ubicación", class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
