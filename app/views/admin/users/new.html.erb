<div class="w-full max-w-2xl mx-auto">
  
  <%# La tarjeta que envuelve todo el formulario %>
  <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">

    <%# Título dinámico dentro de la tarjeta %>
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b border-gray-200 pb-4">
      <%= @user.new_record? ? "Nuevo Usuario" : "Editar Usuario" %>
    </h2>

    <%= form_with(model: [:admin, @user], class: "space-y-6") do |form| %>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4" role="alert">
          <p class="font-bold">Se encontraron <%= pluralize(@user.errors.count, "error") %></p>
          <ul class="mt-2 list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %> 

      <!-- Campo de Descripción -->
      <div class="my-5">
        <%= form.label :name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

      <div class="my-5">
        <%= form.label :email, "Correo Electronico", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>

        <div>
          <%= form.label :role, "Rol", class: "block text-sm font-medium text-gray-700" %>
          <%# Usamos el enum para generar las opciones del select %>
          <%= form.select :role, User.roles.keys.map { |r| [r.capitalize, r] }, { prompt: "Seleccionar rol" } %>
      </div>

      <div class="my-5 border-t pt-6">
  <p class="text-sm text-gray-600 mb-2">
    Deja estos campos en blanco si no quieres cambiar la contraseña.
  </p>
  <div class="space-y-4">
    <div>
      <%= form.label :password, "Nueva Contraseña", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>

    <div>
      <%= form.label :password_confirmation, "Confirmar Nueva Contraseña", class: "block text-sm font-medium text-gray-700" %>
      <%= form.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
  </div>
</div>
      <!-- Botones de Acción -->
      <div class="flex items-center justify-end space-x-4 pt-4 border-t border-gray-200">
        <%= link_to "Cancelar", admin_users_path, class: "rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <%= form.submit "Guardar Usuuario", class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
