
<%# Contenedor principal para centrar la tarjeta y dar un fondo a la página %>
<div class="w-full max-w-2xl mx-auto">
  
  <%# La tarjeta que envuelve todo el formulario %>
  <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">

    <%# Título dinámico dentro de la tarjeta %>
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b border-gray-200 pb-4">
      <%= team_membership.new_record? ? "Nuevo Miembro de Equipo" : "Editar Miembro de Equipo" %>
    </h2>

<%= form_with(model: team_membership, class: "contents") do |form| %>
  <% if team_membership.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(team_membership.errors.count, "error") %> prohibited this team_membership from being saved:</h2>

      <ul class="list-disc ml-6">
        <% team_membership.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 

    <div class="my-5">
      <%= form.label :team_id, "Seleccione un Equipo", class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :team_id, @teams, :id, :description, { prompt: "Seleccione un equipo" }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" } %>
    </div>

    <div class="my-5">
      <%= form.label :user_id, "Seleccionar Agente", class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :user_id, @agents, :id, :name, { prompt: "Seleccione un agente" }, { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" } %>
    </div>

 
  <div class="inline my-5">
    <%= form.submit "Guardar",  class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
  </div>
<% end %>

  </div>
</div>