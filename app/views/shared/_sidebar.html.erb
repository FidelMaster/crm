      <%= link_to 'Ubicaciones', locations_path, class: 'flex items-center mt-4 py-2 px-6 text-gray-300 hover:bg-gray-700 hover:text-white' %>
      <%= link_to 'Miembros Equipos', team_memberships_path, class: 'flex items-center mt-4 py-2 px-6 text-gray-300 hover:bg-gray-700 hover:text-white' %>
      <%= link_to 'Tickets', tickets_path, class: 'flex items-center mt-4 py-2 px-6 text-gray-300 hover:bg-gray-700 hover:text-white' %>
     <% else %>
     <%= link_to 'Tickets', tickets_path, class: 'flex items-center mt-4 py-2 px-6 text-gray-300 hover:bg-gray-700 hover:text-white' %>

