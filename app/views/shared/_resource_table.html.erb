
<div class="bg-white rounded-xl shadow-lg p-6 md:p-8">

  <!-- Encabezado: Título y botón de "Nuevo" -->
  <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 border-b border-gray-200 pb-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-4 md:mb-0"><%= title %></h1>
    <%= link_to "Nuevo #{title.singularize}", new_path, class: "inline-flex items-center gap-2 rounded-lg bg-[#005480] px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-[#005480] focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>

  <!-- Mensaje de notificación (si existe) -->
  <% if notice.present? %>
    <div class="py-3 px-4 bg-green-100 border border-green-200 text-green-700 rounded-md mb-5" id="notice">
      <%= notice %>
    </div>
  <% end %>

  <!-- Contenedor de la tabla -->
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <% headers.each do |header| %>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              <%= header %>
            </th>
          <% end %>
          <th scope="col" class="relative px-6 py-3">
            <span class="sr-only">Acciones</span>
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% if collection.any? %>
          <% collection.each do |item| %>
            <!-- Se renderiza el bloque pasado desde la vista que llama -->
            <%= yield(item) %>
          <% end %>
        <% else %>
          <tr>
            <td colspan="<%= headers.length + 1 %>" class="text-center py-10 text-gray-500">
              No se encontraron registros.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>