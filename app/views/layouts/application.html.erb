
<!DOCTYPE html>
<html lang="es">
<head>
  <title>HelpdeskApp</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body class="bg-gray-100">
  <div class="flex h-screen bg-gray-200" data-controller="sidebar">
    <!-- El sidebar se renderiza aquí -->
    <% if user_signed_in? %>
      <%= render 'shared/sidebar' %>
    <% end %>

    <div class="flex-1 flex flex-col overflow-hidden">
      <!-- La barra superior con el botón de hamburguesa y el usuario se renderiza aquí -->
      <%= render 'shared/topbar' %>

      <!-- Contenido Principal de cada página -->
      <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100">
        <div class="container mx-auto px-6 py-8">
          <p class="notice text-green-700"><%= notice %></p>
          <p class="alert text-red-700"><%= alert %></p>
          <%= yield %>
        </div>
      </main>
    </div>
  </div>
</body>
</html>