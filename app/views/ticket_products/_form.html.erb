<%= form_with(model: [ticket, ticket_product], id: dom_id(ticket, "new_product")) do |form| %>
  <div class="mt-2">
      <%= form.label :product_id, "Producto", class: "block text-sm font-medium text-gray-700" %>
      <%= form.collection_select :product_id, products, :id, :description, 
            { prompt: "Selecciona un producto" }, 
            { class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" } %>
  
  </div>
    <div class="mt-2">
      <%= form.label :quantity, "Cantidad", class: "block text-sm font-medium text-gray-700" %>
      <%= form.number_field :quantity, in: 1..100, step: 1, value: 1, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
    </div>
  <div class="mt-4">
    <%= form.label :observation, "Observación (Opcional)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :observation, rows: 2, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm", placeholder: "Ej: número de serie, detalles de instalación..." %>
  </div>
  <div class="mt-4 flex justify-end">
    <%= form.submit "Añadir Producto", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
  </div>
<% end %>