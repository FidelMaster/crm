<div class="w-full max-w-2xl mx-auto">
  <div class="bg-white rounded-xl shadow-lg p-6 md:p-8">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 border-b border-gray-200 pb-4">
      Información de Facturación para Ticket #<%= @ticket.id %>
    </h2>

    <%= form_with(model: @ticket, url: update_billing_ticket_path(@ticket), method: :patch) do |form| %>
      <div class="space-y-6">
        <!-- Campo Costo -->
           <div>
          <%= form.label :invoice_contact_name, "Nombre del cliente", class: "block text-sm font-medium text-gray-700" %>
          <div class="relative mt-1 rounded-md shadow-sm">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
              <%= form.text_field :invoice_contact_name, class: "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full" %>
       
          </div>
        </div>
        <div>
          <%= form.label :cost, "Costo del Servicio", class: "block text-sm font-medium text-gray-700" %>
          <div class="relative mt-1 rounded-md shadow-sm">
            <div class="pointer-events-none absolute inset-y-0 left-0 flex items-center pl-3">
              <span class="text-gray-500 sm:text-sm">$</span>
            </div>
            <%= form.number_field :cost, step: 0.01, class: "block w-full rounded-md border-gray-300 pl-7 pr-12 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
          </div>
        </div>

        <!-- Campo Detalles de la Factura -->
        <div>
          <%= form.label :invoice_details, "Información General de la Factura", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :invoice_details, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm", placeholder: "Ej: Número de factura, cliente, dirección fiscal..." %>
        </div>
      </div>

      <!-- Botones de Acción -->
      <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200 mt-6">
        <%= link_to "Cancelar", ticket_path(@ticket), class: "rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
        <%= form.submit "Guardar y Marcar como Facturable", class: "rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>